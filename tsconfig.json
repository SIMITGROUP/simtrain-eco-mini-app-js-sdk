{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // ✅ change from "commonjs"
    "moduleResolution": "Node", // ✅ add for modern Node-style resolution
    "declaration": true,
    "outDir": "./lib/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts"]
}
